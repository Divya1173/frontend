{% schema %}
{
  "name": "Review Slider",
  "settings": [],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Name"
        },
        {
          "type": "text",
          "id": "stars",
          "label": "Stars"
        },
        {
          "type": "text",
          "id": "reviewed_on",
          "label": "Reviewed On Date"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Review Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Review Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="review-slider">
  <div class="review-track">
    {% for block in section.blocks %}
    <div class="review-card">
      <h3>{{ block.settings.name }}</h3>
      <p>Rating: {{ block.settings.stars }}</p>
      <p>Reviewed on: {{ block.settings.reviewed_on }}</p>
      <p>{{ block.settings.content }}</p>
    </div>
    {% endfor %}
  </div>
</div>
